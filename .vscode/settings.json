{
  "debug.javascript.terminalOptions": {
    "skipFiles": [
      "<node_internals>/**",
      "!**/node_modules/**",
      "**/$KNOWN_TOOLS$/**"
    ]
  },
  "eslint.nodePath": ".yarn/sdks/eslint",
  "eslint.options": {
    "overrideConfigFile": "config/eslint.config.cjs"
  },
  "eslint.validate": [
    "javascript",
    "typescript"
  ],
  "files.associations": {
    "*.mdx": "mdx",
    "*.ts": "typescript",
    "*.tsx": "typescriptreact",
    "bud.config.json": "json5",
    "bud.json": "json5"
  },
  "files.exclude": {
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.hg": true,
    "**/.svn": true,
    "**/CVS": true,
    "**/Thumbs.db": true,
    "**/node_modules": false
  },
  "prettier.configPath": "config/prettier.config.js",
  "prettier.ignorePath": "config/.prettierignore",
  "search.exclude": {
    "**/.storage": true,
    "**/node_modules": true,
    "**/pnp.*": true,
    ".git": true,
    ".yarn": true,
    "storage": true,
    "verdaccio": true
  },
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.format.semicolons": "remove",
  "typescript.preferences.preferTypeOnlyAutoImports": true,
  "typescript.preferences.quoteStyle": "single"
}
