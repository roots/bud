{
  "debug.javascript.terminalOptions": {
    "skipFiles": [
      "<node_internals>/**",
      "!**/node_modules/**",
      "**/$KNOWN_TOOLS$/**"
    ]
  },
  "eslint.options": {
    "overrideConfigFile": "config/eslint.config.js"
  },
  "eslint.nodePath": ".yarn/sdks/eslint",
  "eslint.validate": ["javascript", "typescript"],
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/node_modules": false
  },
  "search.exclude": {
    ".yarn": true,
    ".git": true,
    "storage": true,
    "verdaccio": true,
    "**/pnp.*": true,
    "**/node_modules": true,
    "**/.budfiles/**/*": true
  },
  "prettier.configPath": "config/prettier.config.js",
  "prettier.ignorePath": "config/.prettierignore",
  "prettier.prettierPath": ".yarn/sdks/prettier",
  "typescript.tsdk": ".yarn/sdks/typescript",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "files.associations": {
    "*.ts": "typescript",
    "*.tsx": "typescriptreact",
    "*.mdx": "mdx",
    "bud.config.json": "json5"
  },
  "cSpell.words": [
    "browserslist",
    "clsx",
    "codecov",
    "clipanion",
    "entrypoints",
    "oclif",
    "instanceof",
    "purgecss",
    "stylelint",
    "tailwindcss",
    "webp",
    "webpack",
    "kellymears",
    "tsdoc"
  ],
  "cSpell.ignoreRegExpList": ["@.*", "bud-.*", "@roots/.*"],
  "cSpell.customDictionaries": {
    "custom-dictionary-workspace": {
      "name": "custom-dictionary-workspace",
      "path": "${workspaceFolder:bud}/.cspell/custom-dictionary-workspace.txt",
      "addWords": true,
      "scope": "workspace"
    }
  }
}
