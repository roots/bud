{
  "extends": ["@roots/bud/config/tsconfig.json"],
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist",
    "paths": {
      "@src/*": ["./*"],
      "@scripts/*": ["./scripts/*"],
      "@styles/*": ["./styles/*"],
      "@components/*": ["./scripts/components/*"]
    },
    "types": [
      "node",
      "webpack-env",
      "@roots/bud",
      "@roots/bud-swc",
      "@roots/bud-tailwindcss"
    ],
  },
  "files": ["./types.d.ts", "./config/bud.config.ts"],
  "include": ["./src"],
  "bud": {
    "useCompilerOptions": true
  }
}
