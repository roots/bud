{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "lib": ["DOM", "ES2019"],
    "jsx": "react",
    "moduleResolution": "node",
    "module": "commonjs",
    "noUnusedLocals": true,
    "noEmitOnError": false,
    "sourceMap": true,
    "target": "ES6"
  },
  "base": "packages",
  "references": [
    {"@roots/bud": "bud"},
    {"@roots/bud-api": "bud-api"},
    {"@roots/bud-build": "bud-build"},
    {"@roots/bud-cli": "bud-cli"},
    {"@roots/bud-compiler": "bud-compiler"},
    {"@roots/bud-extensions": "bud-extensions"},
    {"@roots/bud-framework": "bud-framework"},
    {"@roots/bud-server": "bud-server"},
    {"@roots/bud-support": "bud-support"},
    {"@roots/bud-babel": "extension-babel"},
    {"@roots/bud-eslint": "extension-eslint"},
    {"@roots/bud-manifests": "extension-manifests"},
    {"@roots/bud-postcss": "extension-postcss"},
    {"@roots/bud-purgecss": "extension-purgecss"},
    {"@roots/bud-react": "extension-react"},
    {"@roots/bud-sass": "extension-sass"},
    {"@roots/bud-stylelint": "extensions-stylelint"},
    {"@roots/bud-tailwindcss": "extension-tailwindcss"},
    {"@roots/bud-typescript": "extension-typescript"},
    {"@roots/bud-vue": "extension-vue"},
    {"@roots/bud-typings": "typings"},
    {"@roots/container": "container"},
    {"@roots/dependencies": "dependencies"},
    {"@roots/filesystem": "filesystem"},
    {
      "@roots/entrypoints-webpack-plugin": "webpack-entrypoints-plugin"
    },
    {
      "@roots/merged-manifest-plugin": "webpack-merged-manifest-plugin"
    },
    {
      "@roots/wordpress-externals-plugin": "webpack-wordpress-externals-plugin"
    }
  ],
  "files": []
}
