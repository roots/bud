    {"@roots/bud-compiler": "compiler"},
    {"@roots/bud-config": "config"},
    {"@roots/bud-framework": "framework"},
    {"@roots/bud-postcss": "postcss"},
    {"@roots/bud-rules": "rules"},
    {"@roots/bud-server": "server"},
    {"@roots/bud-support": "support"},
    {"@roots/bud-types": "types"},
    {"@roots/bud-eslint": "extensions/eslint"},
    {"@roots/bud-manifests": "extensions/manifests"},
    {"@roots/bud-purgecss": "extensions/purgecss"},
    {"@roots/bud-react": "extensions/react"},
    {"@roots/bud-sage": "extensions/sage"},
    {"@roots/bud-sass": "extensions/sass"},
    {"@roots/bud-stylelint": "extensions/stylelint"},
    {"@roots/bud-tailwindcss": "extensions/tailwindcss"},
