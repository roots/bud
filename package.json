{
  "name": "bud",
  "private": true,
  "description": "A friendly build tool to help manage your project assets.",
  "homepage": "https://roots.io/bud",
  "repository": {
    "type": "git",
    "url": "https://github.com/roots/bud.git"
  },
  "bugs": {
    "url": "https://github.com/roots/bud/issues"
  },
  "funding": {
    "type": "github sponsors",
    "url": "https://github.com/sponsors/roots"
  },
  "license": "MIT",
  "contributors": [
    "Kelly Mears <kelly@roots.io> (https://kellymears.me)"
  ],
  "engines": {
    "node": ">=12"
  },
  "workspaces": {
    "packages": [
      "packages/bud-support",
      "packages/bud-typings",
      "packages/bud-framework",
      "packages/bud",
      "packages/bud-compiler",
      "packages/bud-server",
      "packages/bud-dependency-extraction-webpack-plugin",
      "packages/bud-eslint",
      "packages/bud-palette-webpack-plugin",
      "packages/bud-purgecss",
      "packages/bud-react",
      "packages/bud-sass",
      "packages/bud-stylelint",
      "packages/bud-tailwindcss",
      "packages/bud-typescript",
      "packages/bud-vue"
    ]
  },
  "scripts": {
    "build": "yarn workspaces run build",
    "lint": "eslint 'packages/**/*.{js,ts,tsx}' --fix",
    "test": "ava",
    "test:coverage": "nyc yarn run test",
    "pre:next": "lerna publish prerelease --ignore-scripts --pre-dist-tag next",
    "release:next": "lerna publish --ignore-scripts --dist-tag next",
    "pre:latest": "lerna publish --ignore-scripts --pre-dist-tag rc",
    "release:latest": "lerna publish --ignore-scripts"
  },
  "devDependencies": {
    "@ava/babel": "^1.0.1",
    "@ava/typescript": "^1.1.1",
    "@typescript-eslint/eslint-plugin": "^3.10.0",
    "@typescript-eslint/parser": "^3.9.1",
    "ava": "^3.11.1",
    "commitizen": "^4.1.5",
    "conventional-changelog-cli": "^2.1.0",
    "cz-lerna-changelog": "^2.0.3",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.5",
    "execa": "^4.0.3",
    "husky": "^4.2.5",
    "ink-testing-library": "^2.0.1",
    "lerna": "^3.22.1",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5",
    "semantic-release": "^15.8.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  }
}
