{
  "name": "bud",
  "packageManager": "yarn@3.1.1",
  "version": "5.0.0",
  "private": true,
  "description": "⚡️ Lightning fast frontend build tools combining the best parts of Symfony Encore and Laravel Mix",
  "repository": {
    "type": "git",
    "url": "https://github.com/roots/bud.git"
  },
  "license": "MIT",
  "engines": {
    "node": "^16.3.0"
  },
  "volta": {
    "node": "16.13.2",
    "yarn": "1.22.17"
  },
  "workspaces": {
    "packages": [
      "sources/@roots/*",
      "tests/util/project",
      "sources/@repo/*"
    ]
  },
  "scripts": {
    "g:profile": "yarn run profile:cjs && yarn run profile:esm",
    "g:profile:cjs": "mkdir -p ./profiles/cjs && tsc --extendedDiagnostics --generateCpuProfile ./profiles/cjs/profile.cpuprofile --generateTrace ./profiles/cjs -p ./tsconfig.json | tee ./profiles/cjs/build.log",
    "g:profile:esm": "mkdir -p ./profiles/esm && tsc --extendedDiagnostics --generateCpuProfile ./profiles/esm/profile.cpuprofile --generateTrace ./profiles/esm -p ./tsconfig-esm.json | tee ./profiles/esm/build.log"
  },
  "devDependencies": {
    "@repo/constants": "workspace:*",
    "@repo/logger": "workspace:*",
    "@repo/test-kit": "workspace:sources/@repo/test-kit",
    "@roots/bud-build": "workspace:sources/@roots/bud-build",
    "@types/fs-extra": "9.0.13",
    "@types/jest": "27.4.0",
    "@types/js-yaml": "4.0.5",
    "@types/lodash": "4.14.178",
    "@types/node": "16.11.22",
    "@types/signale": "1.4.4",
    "@typescript-eslint/eslint-plugin": "5.10.2",
    "@typescript-eslint/parser": "5.10.2",
    "chalk": "4.1.2",
    "codecov": "3.8.3",
    "dotenv": "15.0.1",
    "eslint": "8.8.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-react": "7.28.0",
    "eslint-plugin-react-hooks": "4.3.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "eslint-plugin-tsdoc": "0.2.14",
    "execa": "5.1.1",
    "fs-extra": "10.0.0",
    "globby": "11.1.0",
    "ink": "3.2.0",
    "jest": "27.4.7",
    "js-yaml": "4.1.0",
    "json5": "2.2.0",
    "lodash": "4.17.21",
    "prettier": "2.5.1",
    "pretty-format": "27.4.6",
    "ts-jest": "27.1.3",
    "ts-node": "10.4.0",
    "type-fest": "2.11.1",
    "typescript": "4.5.5"
  },
  "dependencies": {
    "tslib": "2.3.1"
  }
}
