{
  "name": "bud",
  "private": true,
  "description": "A friendly build tool to help manage your project assets.",
  "homepage": "https://roots.io/bud",
  "repository": {
    "type": "git",
    "url": "https://github.com/roots/bud.git"
  },
  "license": "MIT",
  "contributors": [
    {
      "name": "Kelly Mears",
      "url": "https://github.com/kellymears"
    }
  ],
  "engines": {
    "node": ">=15.0"
  },
  "workspaces": {
    "packages": [
      "examples/*",
      "packages/@roots/*",
      "packages/base"
    ]
  },
  "scripts": {
    "build": "yarn workspaces foreach --topological --topological-dev --interlaced --parallel --verbose --no-private --exclude @roots/bud-typings run build",
    "build:cjs": "yarn workspaces foreach --parallel --no-private --exclude @roots/bud-typings --topological --topological-dev --interlaced --verbose --no-private run build:cjs",
    "build:esm": "yarn workspaces foreach --parallel --no-private --exclude @roots/bud-typings --topological --topological-dev --interlaced --verbose --no-private run build:esm",
    "build:ci": "yarn workspaces foreach --no-private --topological --topological-dev --interlaced --verbose --no-private --exclude @roots/bud-typings run build",
    "build:ci:cjs": "yarn workspaces foreach --no-private --exclude @roots/bud-typings --topological --topological-dev --interlaced --verbose --no-private run build:cjs",
    "build:ci:esm": "yarn workspaces foreach --no-private --exclude @roots/bud-typings --topological --topological-dev --interlaced --verbose --no-private run build:esm",
    "clean": "yarn workspaces foreach --no-private --topological --topological-dev --verbose run clean",
    "lint": "yarn prettier 'packages/@roots/*/{src,lib}/**/*.{ts,js,md,json,yml}' --write",
    "pkg": "yarn workspaces foreach --interlaced --verbose run pkg",
    "docs": "yarn node ./dev/docs/gen/cli.js",
    "test": "jest --verbose"
  },
  "resolutions": {
    "@babel/core": "^7.14.3",
    "@babel/types": "^7.14.2",
    "@types/react": "^17.0.8",
    "@types/react-dom": "^17.0.5",
    "chokidar": "^3.5.1",
    "dotenv": "^10.0.0",
    "eslint": "^7.27.0",
    "ink": "^3.0.8",
    "ink-spinner": "^4.0.2",
    "lodash": "^4.17.21",
    "prettier": "^2.3.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remark": "^13.0.0",
    "typescript": "^4.2.4",
    "webpack": "^5.37.1",
    "webpack-dev-middleware": "^4.3.0",
    "webpack-hot-client": "^4.2.0",
    "webpack-hot-middleware": "^2.25.0"
  },
  "devDependencies": {
    "@skypack/package-check": "^0.2.2",
    "@types/fs-extra": "^9.0.11",
    "@types/jest": "^26.0.23",
    "@types/mdx-js__react": "^1",
    "@types/node": "^15.0.0",
    "@types/react": "^17.0.8",
    "@types/react-dom": "^17.0.5",
    "chokidar": "^3.5.1",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "execa": "^5.0.0",
    "fs-extra": "^9.1.0",
    "globby": "^11.0.3",
    "jest": "^26.6.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remark": "^13.0.0",
    "remark-emoji": "^2.2.0",
    "remark-github": "^10.0.1",
    "remark-toc": "^7.2.0",
    "rimraf": "^3.0.2",
    "to-vfile": "^6.1.0",
    "ts-jest": "^26.5.5",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "type-fest": "^1.1.3",
    "typescript": "^4.2.4"
  }
}
