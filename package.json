{
  "name": "bud-monorepo",
  "private": true,
  "description": "A friendly build tool to help manage your project assets.",
  "homepage": "https://roots.io/bud",
  "repository": {
    "type": "git",
    "url": "https://github.com/roots/bud.git"
  },
  "bugs": {
    "url": "https://github.com/roots/bud/issues"
  },
  "funding": {
    "type": "github sponsors",
    "url": "https://github.com/sponsors/roots"
  },
  "license": "MIT",
  "contributors": [
    "Kelly Mears <kelly@roots.io> (https://kellymears.me)"
  ],
  "engines": {
    "node": "14.9.0"
  },
  "workspaces": {
    "packages": [
      "packages/api",
      "packages/bud",
      "packages/cli",
      "packages/compiler",
      "packages/container",
      "packages/dependencies",
      "packages/filesystem",
      "packages/framework",
      "packages/server",
      "packages/support",
      "packages/typings",
      "packages/extension-babel",
      "packages/extension-eslint",
      "packages/extension-postcss",
      "packages/extension-react",
      "packages/extension-sass",
      "packages/extension-tailwindcss",
      "packages/plugin-manifests",
      "packages/webpack-entrypoints-plugin",
      "packages/webpack-merged-manifest-plugin",
      "packages/webpack-wordpress-externals-plugin"
    ]
  },
  "scripts": {
    "yarn:install": "install",
    "yarn:install:production": "install --production --force",
    "make": "run-s clean install build",
    "clean": "lerna clean -y",
    "bootstrap": "lerna bootstrap --hoist",
    "build": "lerna run build",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint 'packages/**/*.{js,ts,tsx}' --fix",
    "lint:prettier": "prettier 'packages/**/src/**/*'  --write",
    "changelog": "conventional-changelog -i CHANGELOG.md -s -u",
    "release:next": "lerna publish --ignore-scripts --dist-tag next",
    "release:next:pre": "lerna publish prerelease --ignore-scripts --pre-dist-tag next",
    "release:latest": "lerna publish --ignore-scripts",
    "release:latest:pre": "lerna publish --ignore-scripts --pre-dist-tag rc",
    "test": "jest --verbose",
    "tsc": "tsc --build"
  },
  "devDependencies": {
    "@types/node": "^14.11.2",
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.2.0",
    "commitizen": "^4.1.5",
    "conventional-changelog-cli": "^2.1.0",
    "cz-lerna-changelog": "^2.0.3",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.5",
    "eslint-plugin-react-hooks": "^4.1.0",
    "husky": "^4.3.0",
    "ink-testing-library": "^2.0.1",
    "jest": "^26.4.2",
    "lerna": "^3.22.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "semantic-release": "^15.8.0",
    "typescript": "^4.0.2"
  }
}
