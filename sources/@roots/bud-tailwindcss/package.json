{
  "name": "@roots/bud-tailwindcss",
  "version": "0.0.0",
  "description": "Adds tailwindcss support to Bud",
  "repository": {
    "type": "git",
    "url": "https://github.com/roots/bud.git",
    "directory": "sources/@roots/bud-tailwindcss"
  },
  "contributors": [
    {
      "name": "kellymears",
      "url": "https://github.com/kellymears"
    },
    {
      "name": "QWp6t",
      "url": "https://github.com/QWp6t"
    },
    {
      "name": "joshuafredrickson",
      "url": "https://github.com/joshuafredrickson"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/roots/bud/issues"
  },
  "funding": {
    "type": "github sponsors",
    "url": "https://github.com/sponsors/roots"
  },
  "keywords": [
    "bud",
    "bud-extension"
  ],
  "engines": {
    "node": ">=16"
  },
  "bud": {
    "type": "extension"
  },
  "files": [
    "lib/",
    "stylelint-config/"
  ],
  "type": "module",
  "module": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": "./lib/index.js",
    "./extension": "./lib/extension.js",
    "./stylelint-config": "./stylelint-config/default.cjs",
    "./stylelint-config/scss": "./stylelint-config/scss.cjs"
  },
  "typesVersions": {
    "*": {
      ".": [
        "./lib/index.d.ts"
      ],
      "env": [
        "./lib/env.d.ts"
      ],
      "extension": [
        "./lib/extension.d.ts"
      ]
    }
  },
  "devDependencies": {
    "@roots/bud-api": "workspace:sources/@roots/bud-api",
    "@skypack/package-check": "0.2.2",
    "@types/node": "16.18.3",
    "@types/tailwindcss": "3.1.0",
    "@types/webpack-virtual-modules": "0.1.1",
    "vitest": "0.24.5"
  },
  "dependencies": {
    "@roots/bud": "workspace:sources/@roots/bud",
    "@roots/bud-framework": "workspace:sources/@roots/bud-framework",
    "@roots/bud-postcss": "workspace:sources/@roots/bud-postcss",
    "@roots/bud-support": "workspace:sources/@roots/bud-support",
    "@types/fs-extra": "9.0.13",
    "autoprefixer": "^10.4.13",
    "chalk": "5.1.2",
    "tailwindcss": "3.2.4",
    "tslib": "2.4.1",
    "webpack-virtual-modules": "0.4.6"
  },
  "peerDependencies": {
    "autoprefixer": "*",
    "tailwindcss": "*"
  },
  "peerDependenciesMeta": {
    "autoprefixer": {
      "optional": true
    },
    "tailwindcss": {
      "optional": true
    }
  },
  "volta": {
    "extends": "../../../package.json"
  }
}
