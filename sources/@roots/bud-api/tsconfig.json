  "include": ["./src"],
  "references": [
    {"path": "../bud-build/tsconfig.json"},
    {"path": "../bud-extensions/tsconfig.json"},
    {"path": "../bud-framework/tsconfig.json"},
    {"path": "../bud-support/tsconfig.json"},
    {"path": "../bud-minify/tsconfig.json"},
    {"path": "../container/tsconfig.json"}
  ]
}
