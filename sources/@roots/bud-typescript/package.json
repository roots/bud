{
  "name": "@roots/bud-typescript",
  "version": "0.0.0",
  "description": "Adds Typescript support to Bud",
  "engines": {
    "node": ">=16"
  },
  "contributors": [
    {
      "email": "developers@tinypixel.dev",
      "name": "Kelly Mears",
      "url": "https://github.com/kellymears"
    },
    {
      "email": "ben@benword.com",
      "name": "Ben Word",
      "url": "https://github.com/retlehs"
    },
    {
      "name": "QWp6t",
      "url": "https://github.com/QWp6t"
    },
    {
      "email": "brandon@tendency.me",
      "name": "Brandon",
      "url": "https://github.com/Log1x"
    }
  ],
  "license": "MIT",
  "funding": {
    "type": "github sponsors",
    "url": "https://github.com/sponsors/roots"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/roots/bud.git",
    "directory": "sources/@roots/bud-typescript"
  },
  "bugs": "https://github.com/roots/bud/issues",
  "keywords": [
    "bud",
    "extension"
  ],
  "files": [
    "config",
    "docs",
    "lib",
    "src",
    "tsconfig"
  ],
  "type": "module",
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "default": "./lib/index.js"
    },
    "./typecheck": {
      "import": "./lib/typecheck/index.js",
      "default": "./lib/typecheck/index.js"
    },
    "./bud/commands": {
      "import": "./lib/bud/commands/index.js",
      "default": "./lib/bud/commands/index.js"
    },
    "./types": {
      "import": "./lib/types.js",
      "default": "./lib/types.js"
    },
    "./config/tsconfig.json": "./config/tsconfig.json",
    "./tsconfig/tsconfig.json": "./config/tsconfig.json"
  },
  "typesVersions": {
    "*": {
      ".": [
        "./lib/index.d.ts"
      ],
      "typecheck": [
        "./lib/typecheck/index.d.ts"
      ],
      "types": [
        "./lib/types.d.ts"
      ]
    }
  },
  "types": "./lib/index.d.ts",
  "module": "./lib/index.js",
  "devDependencies": {
    "@roots/bud-api": "workspace:*",
    "@roots/bud-babel": "workspace:*",
    "@skypack/package-check": "0.2.2",
    "@types/fork-ts-checker-webpack-plugin": "0.4.5",
    "@types/node": "18.18.3",
    "@types/webpack-env": "1.18.2",
    "webpack": "5.88.2"
  },
  "dependencies": {
    "@roots/bud": "workspace:*",
    "@roots/bud-build": "workspace:*",
    "@roots/bud-framework": "workspace:*",
    "@roots/bud-support": "workspace:*",
    "fork-ts-checker-webpack-plugin": "7.3.0",
    "react-refresh": "0.14.0",
    "react-refresh-typescript": "2.0.9",
    "ts-loader": "9.4.4",
    "ts-node": "10.9.1",
    "tslib": "2.6.2",
    "typescript": "5.2.2"
  },
  "volta": {
    "extends": "../../../package.json"
  }
}
