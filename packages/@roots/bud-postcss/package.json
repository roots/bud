  "peerDependencies": {
    "@roots/bud": "*",
    "postcss": "^8",
    "postcss-import": "^14",
    "postcss-preset-env": "^6"
  },
  "peerDependenciesMeta": {
    "postcss-import": {
      "optional": true
    },
    "postcss-preset-env": {
      "optional": true
