{
  "name": "@roots/bud-postcss",
  "version": "3.2.0-next.2",
  "description": "Adds postcss support to @roots/bud projects",
  "homepage": "https://roots.io/bud",
  "repository": {
    "type": "git",
    "url": "https://github.com/roots/bud.git",
    "directory": "packages/@roots/bud-postcss"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/roots/bud/issues"
  },
  "funding": {
    "type": "github sponsors",
    "url": "https://github.com/sponsors/roots"
  },
  "contributors": [
    "Kelly Mears <kelly@roots.io> (https://kellymears.me)"
  ],
  "keywords": [
    "bud",
    "bud-extension",
    "postcss"
  ],
  "engines": {
    "node": ">=14"
  },
  "files": [
    "docs/",
    "lib/",
    "manifest.yml",
    "types/"
  ],
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.mjs",
  "types": "./types/index.d.ts",
  "exports": {
    "require": "./lib/cjs/index.js",
    "import": "./lib/esm/index.mjs"
  },
  "scripts": {
    "build": "yarn g:build",
    "build:cjs": "yarn g:build:cjs",
    "build:esm": "yarn g:build:esm",
    "lint": "yarn g:lint",
    "lint:eslint": "yarn g:lint:eslint",
    "lint:prettier": "yarn g:lint:prettier",
    "clean": "yarn g:clean",
    "clean:lib": "yarn g:clean:lib",
    "clean:modules": "yarn g:clean:modules",
    "clean:types": "yarn g:clean:types",
    "pkg": "yarn g:pkg",
    "pkg:check": "yarn g:pkg:check",
    "pkg:format": "yarn g:pkg:format"
  },
  "devDependencies": {
    "@types/node": "^15.0.0",
    "@types/signale": "^1.4.1"
  },
  "dependencies": {
    "@roots/bud-extensions": "workspace:*",
    "@roots/bud-framework": "workspace:*",
    "autobind-decorator": "^2.4.0",
    "autoprefixer": "^10.2.5",
    "postcss": "^8.2.13",
    "postcss-custom-properties": "^11.0.0",
    "postcss-import": "^14.0.1",
