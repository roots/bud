{
  "name": "@roots/bud-terser",
  "version": "3.0.71-alpha.0",
  "description": "Adds terser support to Bud",
  "repository": {
    "type": "git",
    "url": "git://github.com/roots/bud.git",
    "directory": "packages/bud-terser"
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "http://opensource.org/licenses/MIT"
    }
  ],
  "bugs": {
    "url": "https://github.com/roots/bud/issues"
  },
  "license": "MIT",
  "keywords": [
    "webpack",
    "bud",
    "bud-extension"
  ],
  "engines": {
    "node": ">=12"
  },
  "files": [
    "lib/",
    "src/"
  ],
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "exports": {
    "require": "./lib/cjs/index.js",
    "import": "./lib/esm/index.js"
  },
  "types": "./lib/types/index.d.ts",
  "scripts": {
    "build": "run-s build:cjs build:esm",
    "build:cjs": "tsc --build tsconfig.json",
    "build:esm": "tsc --build tsconfig-esm.json",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint 'src/**/*.{js,ts,tsx}' --fix",
    "lint:prettier": "prettier 'src/**/*'  --write",
    "clean": "run-s clean:*",
    "clean:lib": "rimraf ./lib",
    "clean:modules": "rimraf ./node_modules",
    "clean:types": "rimraf ./types",
    "pkg": "run-s pkg:*",
    "pkg:check": "package-check --verbose",
    "pkg:format": "prettier './lib/**/*.{js,ts}' --write"
  },
  "devDependencies": {
    "@roots/bud": "^3.0.71-alpha.0",
    "@roots/bud-framework": "^3.0.71-alpha.0",
    "@roots/bud-typings": "^3.0.71-alpha.0",
    "@types/node": "^14.14.31",
    "@types/webpack": "^4.41.26",
    "run-s": "^0.0.0",
    "type-fest": "^0.21.2"
  },
  "dependencies": {
    "@roots/bud-support": "^3.0.71-alpha.0",
    "terser-webpack-plugin": "^4.2.3"
  },
  "gitHead": "2895cea534566264c5a908ad52b26a2eab1e5684"
}
