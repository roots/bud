{
  "name": "@roots/bud-tailwindcss",
  "version": "4.1.0",
  "description": "Adds tailwindcss support to Bud",
  "repository": {
    "type": "git",
    "url": "https://github.com/roots/bud.git",
    "directory": "packages/@roots/bud-tailwindcss"
  },
  "contributors": [
    {
      "name": "Kelly Mears",
      "url": "https://github.com/kellymears"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/roots/bud/issues"
  },
  "funding": {
    "type": "github sponsors",
    "url": "https://github.com/sponsors/roots"
  },
  "keywords": [
    "bud",
    "bud-extension"
  ],
  "engines": {
    "node": ">=14"
  },
  "files": [
    "lib/",
    "publish/",
    "types/",
    "manifest/"
  ],
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "./types/index.d.ts",
  "exports": {
    "require": "./lib/cjs/index.js",
    "import": "./lib/esm/index.js"
  },
  "scripts": {
    "build": "yarn g:build",
    "build:cjs": "yarn g:build:cjs",
    "build:esm": "yarn g:build:esm",
    "lint": "yarn g:lint",
    "lint:eslint": "yarn g:lint:eslint",
    "lint:prettier": "yarn g:lint:prettier",
    "clean": "yarn g:clean",
    "clean:lib": "yarn g:clean:lib",
    "clean:modules": "yarn g:clean:modules",
    "clean:types": "yarn g:clean:types",
    "pkg": "yarn g:pkg",
    "pkg:check": "yarn g:pkg:check",
    "pkg:format": "yarn g:pkg:format"
  },
  "devDependencies": {
    "@types/node": "^15.0.0",
    "autoprefixer": "^10.2.5",
    "postcss": "^8.2.13"
  },
  "dependencies": {
    "@roots/bud-dashboard": "workspace:*",
    "@roots/bud-extensions": "workspace:*",
    "@roots/bud-framework": "workspace:*",
    "@roots/bud-postcss": "workspace:*",
    "@roots/bud-support": "workspace:*",
    "@tailwindcss/jit": "^0.1.18",
    "autobind-decorator": "^2.4.0",
    "tailwindcss": "^2.1.2"
  }
}
