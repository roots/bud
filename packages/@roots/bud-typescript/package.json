{
  "name": "@roots/bud-typescript",
  "version": "5.0.0",
  "description": "Adds Typescript support to Bud.",
  "repository": {
    "type": "git",
    "url": "https://github.com/roots/bud.git",
    "directory": "packages/@roots/bud-typescript"
  },
  "bugs": {
    "url": "https://github.com/roots/bud/issues"
  },
  "funding": {
    "type": "github sponsors",
    "url": "https://github.com/sponsors/roots"
  },
  "license": "MIT",
  "contributors": [
    {
      "name": "kellymears",
      "url": "https://github.com/kellymears"
    },
    {
      "name": "QWp6t",
      "url": "https://github.com/QWp6t"
    }
  ],
  "keywords": [
    "bud",
    "bud-extension"
  ],
  "engines": {
    "node": ">=14"
  },
  "files": [
    "lib/",
    "templates/",
    "types/"
  ],
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "exports": {
    "require": "./lib/cjs/index.js",
    "import": "./lib/esm/index.js"
  },
  "types": "./types/index.d.ts",
  "scripts": {
    "build": "yarn g:build",
    "build:cjs": "yarn g:build:cjs",
    "build:esm": "yarn g:build:esm",
    "profile": "yarn g:profile",
    "profile:cjs": "yarn g:profile:cjs",
    "profile:esm": "yarn g:profile:esm",
    "lint": "yarn g:lint",
    "lint:eslint": "yarn g:lint:eslint",
    "lint:prettier": "yarn g:lint:prettier",
    "clean": "yarn g:clean",
    "clean:lib": "yarn g:clean:lib",
    "clean:modules": "yarn g:clean:modules",
    "clean:types": "yarn g:clean:types",
    "pkg": "yarn g:pkg",
    "pkg:check": "yarn g:pkg:check",
    "pkg:format": "yarn g:pkg:format"
  },
  "bud": {
    "type": "extension",
    "peers": [
      "@roots/bud-babel"
    ]
  },
  "devDependencies": {
    "@roots/bud-babel": "workspace:packages/@roots/bud-babel",
    "@roots/bud-framework": "workspace:packages/@roots/bud-framework",
    "@types/eslint": "8.2.1",
    "@types/jest": "27.4.0",
    "@types/node": "16.11.19",
    "eslint": "8.6.0",
    "jest": "27.4.7",
    "typescript": "4.5.4",
    "webpack": "5.65.0"
  },
  "dependencies": {
    "@roots/bud-build": "workspace:packages/@roots/bud-build",
    "@typescript-eslint/parser": "^5.4.0",
    "autobind-decorator": "^2.4.0",
    "fork-ts-checker-webpack-plugin": "^6.4.0",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "tslib": "^2.3.1"
  },
  "peerDependencies": {
    "eslint": "^7 || ^8.0.0",
    "typescript": "^4"
  },
  "peerDependenciesMeta": {
    "eslint": {
      "optional": true
    }
  }
}
