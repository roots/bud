{
  "compilerOptions": {
    "target": "ES2018",
    "module": "esnext",
    "lib": ["es2015", "es2016", "es2017", "es2018"],
    "declaration": true,
    "declarationDir": "./types",
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": false
  },
  "include": ["src/"],
  "exclude": ["**/*.spec.ts"]
}
